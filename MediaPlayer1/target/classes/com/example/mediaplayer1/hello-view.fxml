<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vBoxPane" alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mediaplayer1.HelloController">
   <children>
      <MediaView fx:id="mvVideo" />
      <Slider fx:id="sliderTime" prefHeight="26.0" prefWidth="357.0" style="-fx-cursor: hand;">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </Slider>
      <HBox fx:id="hboxControls" alignment="CENTER_LEFT">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <children>
            <HBox fx:id="hBoxV" alignment="CENTER">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
               <children>
                  <Button fx:id="buttonPP" mnemonicParsing="false" text="PLAY/PAUSE">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin></Button>
                  <Button fx:id="buttonS" mnemonicParsing="false" text="STOP">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
                  <Label fx:id="labelV" style="-fx-cursor: hand;" text="VOLUME">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <Slider fx:id="sliderV" style="-fx-cursor: hand;" />
               </children>
            </HBox>
            <Label fx:id="labelcurrentTime">
               <font>
                  <Font name="Tahoma Bold" size="14.0" />
               </font>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
